{
  "compilerOptions": {
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strict": true,
    "module": "ESNext",
    "skipLibCheck": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "declaration": true,
    "emitDeclarationOnly": true,
  },
  "include": ["./index.ts"],
}